datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "cargo prisma"
  output = "../src/prisma.rs"
}

model Account {
  id       String @id @unique
  username String @unique

  email    String @unique
  password String

  posts Post[]

  @@index([id, email])
}

model Post {
  id      String @id @unique
  title   String
  content String

  author   Account @relation(fields: [authorId], references: [id])
  authorId String

  likes    Int @default(0)
  dislikes Int @default(0)
}

